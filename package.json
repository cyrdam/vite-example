{
	"name": "vite-example",
	"description": "Repository with vite examples.",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"lint": "eslint --ext .ts,tsx .",
		"lint:fix": "eslint --ext .ts,tsx --fix .",
		"format": "prettier \"*.{ts,tsx,css,html}\" --ignore-unknown --write ",
		"format:check": "prettier \"*.{ts,tsx,css,html}\" --ignore-unknown --check",
		"prepare": "husky install"
	},
	"dependencies": {
		"preact": "^10.19.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.4.3",
		"@commitlint/config-conventional": "^18.4.3",
		"@preact/preset-vite": "^2.7.0",
		"@testing-library/jest-dom": "^6.1.4",
		"@testing-library/preact": "^3.2.3",
		"@testing-library/user-event": "^14.5.1",
		"@typescript-eslint/parser": "^6.12.0",
		"@vitest/coverage-v8": "^0.34.6",
		"@vitest/ui": "^0.34.7",
		"eslint": "^8.54.0",
		"eslint-config-preact": "^1.3.0",
		"eslint-config-prettier": "^9.0.0",
		"happy-dom": "^12.10.3",
		"husky": "^8.0.3",
		"jsdom": "^22.1.0",
		"lint-staged": "^15.1.0",
		"prettier": "^3.1.0",
		"typescript": "^5.3.2",
		"vite": "^5.0.4",
		"vitest": "^0.34.6",
		"vitest-dom": "^0.1.1"
	}
}
